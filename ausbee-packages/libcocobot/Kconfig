	bool "+ Position"
	default n
	depends on LIBCOCOBOT

config LIBCOCOBOT_POSITION_TICK_PER_180DEG
  int " + Tick / 180deg"
  depends on LIBCOCOBOT && LIBCOCOBOT_POSITION
  default 1

config LIBCOCOBOT_POSITION_TICK_PER_METER
  int " + Tick / 1m"
  depends on LIBCOCOBOT && LIBCOCOBOT_POSITION
  default 1000

