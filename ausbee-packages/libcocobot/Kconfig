config LIBCOCOBOT_GAME_STATE
	bool "+ Game state"
	default n
	depends on LIBCOCOBOT

###
config LIBCOCOBOT_PATHFINDER
	bool "+ Pathfinder"
	default n
	depends on LIBCOCOBOT

choice
  prompt " + Pathfinder Table"
	depends on LIBCOCOBOT && LIBCOCOBOT_PATHFINDER
  config TABLE_2016
      bool "2016"
  config TABLE_OTHER
      bool "other"
endchoice

